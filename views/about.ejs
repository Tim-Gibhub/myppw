<%- include('../partials/header.ejs') -%>
<%- include('../partials/topnav.ejs') -%>

  <main class="container">
    <div class="row justify-content-md-center" >
      <div class="col-6">
        <h4 class="display-4" >Contatct Us</h4>
        <hr class="my-4">   
      </div>
    </div>
    <div class="row justify-content-md-center" >
      <div class="col-lg-8 col-md-8 col-sm-10 col-xs-10">
        <form>
          <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" class="form-control" id="fullName" 
            aria-describedby="fullName" name="fullName" placeholder="Enter your full name" required>
            
          </div>
          <div class="form-group">
            <label for="contactNumber">Contact Number</label>
            <input type="tel" class="form-control" id="contactNumber" 
            aria-describedby="contactNumber" name="contactNumber" placeholder="Enter your contact number" required>
          </div>
          <div class="form-group">
            <label for="emailAddress">Email address</label>
            <input type="email" class="form-control" id="emailAddress" 
            aria-describedby="emailAddress" name="emailAddress" placeholder="Enter your Email Address" required>
            
          </div>
          <div class="form-group">
            <label for="message">Your Message</label>
            <textarea class="form-control" id="message" rows="3" name="message"></textarea>
          </div>    
   
          <button type="submit" class="btn  btn-primary" id="sendBtutton"><i class="fas fa-paper-plane"></i> Send</button>
          <button type="reset" class="btn  btn-warning" id="cancelBtutton"><i class="fas fa-undo"></i> Cancel</button>
         
        </form>
    </div>
  </div>
 </main>
   

<%- include('../partials/endnav.ejs') -%>
<%- include('../partials/footer.ejs') -%>

