  <main class="container mb-2">
    <div class="row justify-content-md-center" >
      <div class="col-lg-8 col-md-8 col-sm-10 col-xs-10">
        <h4 class="display-4">Login</h4>
        <hr class="my-4">   
      </div>
    </div>
    <div class="row justify-content-md-center" >
      <div class="col-lg-8 col-md-8 col-sm-10 col-xs-10">
        <form method="POST">
          <div class="form-group row">
            <label for="username" class="col-sm-4 col-form-label">User Name</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="username" 
            aria-describedby="username" name="username" placeholder="Enter your user name" required>
          </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-4 col-form-label">password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="password" 
            aria-describedby="password" name="password" placeholder="Enter your password" required>
          </div>
          </div>
            
   
          <button type="submit" class="btn  btn-primary" id="loginButton"><i class="fas fa-sign-in-alt"></i> Login</button>
          
        </form>
    </div>
  </div>
 </main>
   
