<div class="row justify-content-md-center">
    <div class="col mt-2" >
      <a href="/component-list/add" class="btn btn-primary btn-ls"><i class="fas fa-plus-circle"></i> Add New Contract</a>
      <hr>

      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light ">
          <tr>
            <th scope="col"></th>
            <th scope="col">Contact Name</th>
            <th scope="col">Contact Number</th>
            <th scope="col">Email Address</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
           
            <% for(let count=0; count < components.length; count++) { %>
                <tr>
                  <td><%= count+1 %></td>
                  <td><%= components[count].name %></td>
                  <td><%= components[count].phone %></td>
                  <td><%= components[count].email %></td>
                  <td>
                    <a href="/component-list/edit/<%= components[count]._id %>" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Update</a>
                  </td>
                  <td>
                      <a href="/component-list/delete/<%= components[count]._id %>" class="btn btn-danger btn-sm">
                          <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                
              <% } %>

        </tbody>
      </table>

    </div>
  </div>